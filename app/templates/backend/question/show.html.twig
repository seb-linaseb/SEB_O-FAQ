{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Question{% endblock %}

{% block content %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ question.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ question.content }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ question.rate }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>
                    {% for tag in question.tag %}
                        {{ tag.name }}
                    {% else %}
                        Aucune réponse
                    {% endfor %}
                </td>
            </tr>

            <tr>
                <th>Réponses</th>
                <td>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Note</th>
                                <th>Préférée</th>
                                <th>Contenu</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for answer in question.answers %}
                            <tr>
                                <td>
                                    {{ answer.rate }}
                                </td>
                                <td>
                                    {{ answer.prefered ? 'Yes' : 'No'  }}
                                </td>
                                <td>
                                    {{ answer.content }}
                                </td>
                            </tr>
                            {% else %}
                                Aucune réponse
                            {% endfor %}
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('question_list') }}">back to list</a>

    <a href="{#{{ path('user_edit', {'id': user.id}) }}#}">edit</a>

    {#{{ include('user/_delete_form.html.twig') }}#}
{% endblock %}
