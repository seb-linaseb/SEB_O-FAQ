{% extends 'backend/backend_layout.html.twig' %}

{% block title %}TAG LIST{% endblock %}

{% block content %}

    <h1>Tag index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>
                    {{ tag.name }}
                </td>
                <td>
                    <a href="{{ path('backend_tag_edit', {'id': tag.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backend_tag_new') }}">Create new</a>


{% endblock %}
